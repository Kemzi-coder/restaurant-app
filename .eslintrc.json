{
  "extends": ["next/core-web-vitals", "airbnb", "airbnb/hooks", "plugin:react/jsx-runtime", "prettier"],
  "plugins": ["prettier"],
	"settings": {
		"import/resolver": {
			"alias": {
				"extensions": [".js", ".jsx"],
				"map": [["@", "."]]
			}
		}
	},
  "rules": {
		"prettier/prettier": "error",
		"react/function-component-definition": [
			"error",
			{
				"namedComponents": "arrow-function",
				"unnamedComponents": "arrow-function"
			}
		],
		"no-console": "off",
		"import/prefer-default-export": "off",
		"react/prop-types": "off",
		"global-require": "warn"
	}
}
